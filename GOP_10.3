char add_ending(char *input, char *output){
  strcpy(output, input);
  
  if(strrchr(*input, 'y'))
    strcat(output[strlen(input)], "ies");
  else if(strrchar(*input, 's'))
    strcat(output[strlen(input)], "es");
  else if(strrchar(*input, 'ch') || strrchar(*input, 'sh'))
    strcat(output[strlen(input)-1], "es");
  else
    strcat(output, "s");
}

void print(char *input, char *output){
